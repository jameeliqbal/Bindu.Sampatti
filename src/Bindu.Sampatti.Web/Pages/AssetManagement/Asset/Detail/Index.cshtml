@page

@using  Bindu.Sampatti.Web.Pages.AssetManagement.Asset.Detail
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Card
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Tab

@section scripts{

    <abp-script src="/Pages/AssetManagement/Asset/Detail/Detail.js" />
     

}

@model IndexModel
<div class="row mb-2">
    <div class="col-12">
        <a href="/assetmanagement/asset" class="float-left "><i class="fas fa-arrow-circle-left"></i> Back to list</a>
    </div>
</div>
<abp-card  >
    <abp-card-header>
        <abp-card-title>Asset Details</abp-card-title>

    </abp-card-header>
    <abp-card-body>
 

        <abp-row>
            <abp-column>
                <abp-card-title>A.1.1.</abp-card-title>
                <abp-card-subtitle>Asset Class One</abp-card-subtitle>
                <abp-card-text>
                    Asset One Description
                </abp-card-text>
            </abp-column>
     
        </abp-row>
        
    </abp-card-body>
   
    
</abp-card>

<abp-tabs tab-style="Tab" class="mt-3">
    <abp-tab title="<i class='fas fa-calendar-check'></i> Capitalization Info" icon="calendar-check">
        <dl class="row mt-3">

            <dt class="col-3">Date </dt>
            <dd class="col-9">20 March 2021</dd>

            <dt class="col-3">Location </dt>
            <dd class="col-9">Puttur</dd>

            <dt class="col-3">Department </dt>
            <dd class="col-9">Department One</dd>

            <dt class="col-3">Section </dt>
            <dd class="col-9">Section One</dd>

            <dt class="col-3">Custodian</dt>
            <dd class="col-9">Employee Three</dd>

            <dt class="col-3">Certificate </dt>
            <dd class="col-9"><a href="#"><i class="fas fa-file-pdf text-danger"></i> asset-one-cert.pdf</a></dd>
        </dl>

    </abp-tab>
    <abp-tab title="<i class='fas fa-file-invoice-dollar'></i> Accounting Info">
        <dl class="row mt-3">
            <dt class="col-3">Invoice Number</dt>
            <dd class="col-9">Inv00100</dd>

            <dt class="col-3">Invoice Date </dt>
            <dd class="col-9">20 March 2021</dd>

            <dt class="col-3">Invoice Value</dt>
            <dd class="col-9">Rs.1,00,000</dd>

            <dt class="col-3">Ledger A/c </dt>
            <dd class="col-9">Account One</dd>

        </dl>
    </abp-tab>

    <abp-tab title="<i class='fas fa fa-gear  \'></i> Actions">
        <abp-list-group flush="true">
            <abp-list-group-item><i class="fas fa-calendar-check "></i> <a href="#" id="CapitalizeAsset">Capitalize Asset</a></abp-list-group-item>
            <abp-list-group-item><i class="fas fa-qrcode"></i> <a href="#">Download QR Code</a></abp-list-group-item>
            <abp-list-group-item><i class="fas fa-stopwatch"></i> <a href="#">Retire Asset</a></abp-list-group-item>
        </abp-list-group>
    </abp-tab>
</abp-tabs>


