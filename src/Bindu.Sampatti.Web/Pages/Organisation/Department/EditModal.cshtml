@page

@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Bindu.Sampatti.Localization
@using Bindu.Sampatti.Web.Pages.Organisation.Department

@model EditModalModel

@inject IStringLocalizer<SampattiResource> L

@{
    Layout = null;
}

<form asp-page="/organisation/department/editmodal">
    <abp-modal>
        <abp-modal-header title="@L["DepartmentUpdate"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="ExistingDepartment.Id" type="hidden" />
            <abp-input asp-for="ExistingDepartment.Name" />
            <abp-input asp-for="ExistingDepartment.Notes" />
            <abp-radio asp-for="ExistingDepartment.Status" asp-items="@Model.DepartmentStatus" label="@L["DepartmentStatus"].Value" inline="true" />

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Save|AbpModalButtons.Cancel)"></abp-modal-footer>
    </abp-modal>
</form>