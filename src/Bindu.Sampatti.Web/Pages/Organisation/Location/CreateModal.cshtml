@page

@using Bindu.Sampatti.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Utils
@using Bindu.Sampatti.Web.Pages.Organisation.Location

@model CreateModalModel

@inject IStringLocalizer<SampattiResource> L

@{
    Layout = null;
}
 

<form asp-page="/Organisation/Location/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["LocationNew"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="NewLocation.Name" />
            <abp-input asp-for="NewLocation.Notes" />
            <abp-radio asp-for="NewLocation.Status" asp-items="@Model.LocationStatus" label="@L["LocationStatus"].Value"  inline="true" />

        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Save|AbpModalButtons.Cancel)" >
        </abp-modal-footer>

    </abp-modal>

</form>

