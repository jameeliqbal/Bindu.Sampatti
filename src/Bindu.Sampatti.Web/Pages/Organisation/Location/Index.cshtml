@page

@using Bindu.Sampatti.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Card

@using  Bindu.Sampatti.Web.Pages.Organisation.Location

@model IndexModel

@inject IStringLocalizer<SampattiResource> L

@section scripts {
 <script>
     $(document).ready(function () {
         toastr.options = {
             "closeButton": true,
             "debug": false,
             "newestOnTop": false,
             "progressBar": true,
             "positionClass": "toast-bottom-right",
             "preventDuplicates": false,
             "onclick": null,
             "showDuration": "300",
             "hideDuration": "1000",
             "timeOut": "5000",
             "extendedTimeOut": "1000",
             "showEasing": "swing",
             "hideEasing": "linear",
             "showMethod": "fadeIn",
             "hideMethod": "fadeOut"
         }
     });
 </script> 
    <abp-script src="/Pages/Organisation/Location/index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Locations"]</abp-card-title>
            </abp-column>

            <abp-column size-md="_6" class="text-right" >
                <abp-button id="NewLocationButton" text="@L["LocationNew"].Value" icon="plus" button-type="Primary"/> 
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" hoverable-rows="true" id="LocationsTable"></abp-table>
    </abp-card-body>
</abp-card>