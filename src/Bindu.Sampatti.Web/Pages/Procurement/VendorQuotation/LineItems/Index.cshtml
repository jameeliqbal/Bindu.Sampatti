        <abp-script src="/pages/procurement/vendorquotation/lineitems/index.js" />
    }


<abp-card>
    <abp-card-header>
        <abp-card-title>
            Quotation Details
        </abp-card-title>
    </abp-card-header>

    <abp-card-body>
        <div class="row">
            <div class="col-3">
                <h3>
                    VQ000X
                </h3>
                <h6><span class="badge badge-pill badge-primary">Waiting for Approval</span></h6>
                <small class="text-muted">20 March 2021 11:15 AM</small>
                <br />

            </div>

            <div class="=col-9">
                <a abp-card-link href="/Procurement/purchaserequisition/lineitems/index?prNumber=PR0001">
                    <i class="fas fa-shopping-cart"></i>
                    PR0001
                </a>
            </div>
        </div>
    </abp-card-body>
</abp-card>

    


    <abp-nav nav-style="Pill" icon="menu" class="mt-3">
        <abp-nav-item>
            <a abp-nav-link href="/procurement/vendorquotation"><i class="fa fa-arrow-alt-circle-left"></i> Back to List</a>

        </abp-nav-item>
        <abp-nav-item>
            <a abp-nav-link active="true" href="#">
                <i class="fas  fa fa-clipboard-list"></i>
                Quotation Items
            </a>
        </abp-nav-item>
        <abp-nav-item>
            <a abp-nav-link href="/Procurement/vendorquotation/poissued/index?prNumber=PR0001"><i class="fas  fa fa-clipboard-check "></i> PO Issued</a>
        </abp-nav-item>

    </abp-nav>
    <abp-card class="mt-3">
        <abp-card-header>
            <abp-row>
                <abp-column size-md="_6">
                    <abp-card-title>
                        <abp-button id="newVQLineItem" text="Add Item" icon="plus" button-type="Primary" />
                    </abp-card-title>
                </abp-column>
                <abp-column size-md="_6" class="text-right">
                    <abp-dropdown>
                        <abp-dropdown-button button-type="Danger" text="Workflow" icon="stack-overflow" />
                        <abp-dropdown-menu>
                            <abp-dropdown-item href="#" Class="fas fa-check-square"> Approve</abp-dropdown-item>
                            <abp-dropdown-divider />
                            <abp-dropdown-item href="#" Class="fa fa-times-rectangle"> Reject</abp-dropdown-item>
                        </abp-dropdown-menu>
                    </abp-dropdown>
                </abp-column>
            </abp-row>
        </abp-card-header>

        <abp-card-body>
            <abp-table striped-rows="true" hoverable-rows="true" id="vqLineItems" />
        </abp-card-body>
    </abp-card>
